<div class="container section">
  <div class="row">
    <div class="col s12 l6 z-depth 5 center-align medCard">

      <form action="/index/inputs" method="POST" class="align-center" id="medicForm">
        <input placeholder="Add your medications" type="text" id="rx1" name="medOne" required="" area-required="true"
          oninvalid="this.setCustomValidity('Enter a medication')" oninput="setCustomValidity=('')">

        <input placeholder="Add your medications" type="text" id="rx2" name="medOne" required="" area-required="true"
          oninvalid="this.setCustomValidity('Enter a medication')" oninput="setCustomValidity=('')">
      </form>
      <a class="btn-floating btn-large waves-effect waves-light blue" id="addMed" type="submit" name="action">
        {{this.med_name}}
        <i class="material-icons plus">add</i></a>
    </div>
  </div>
</div>



<div class="section">
  <div class="container">
    <div class="row">
      <div class="col s12 m6 l12 pull">
        <div class="card small white darken-5 z-depth-3">
          <div class="card-stacked">
            <div class="card-content">
              <p class="medbox"> added meds </p>
            </div>
          </div>
        </div>
      </div>
      <button class="btn waves-effect waves-light col offset-s3 s6" type="submit" id="medicInput" name="action">
        check
      </button>
      <div class="col s12 m6 l12 push">
        <div class="card small white darken-5 z-depth-3">
          <div class="card-stacked">
            <div class="card-content center-align">
              <p class="center-align"> reactions</p>
              <p class="reactions"></p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>












